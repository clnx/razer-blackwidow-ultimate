# Maintainer: juankfree <juan77.sonic at gmail dot com>
pkgname=razer-blackwidow-ultimate
pkgver=0.0.1
pkgrel=1
pkgdesc="Enables M1-M5 and FN keys in Linux for the Razer BlackWidow Ultimate keyboard"
arch=('any')
url="https://github.com/juankfree/razer-blackwidow-ultimate"
license=('GPL2')
depends=('python-pyusb' 'xorg-xmodmap')
provides=('razer-blackwidow-ultimate')
conflicts=('blackwidow-enable-macro-keys' 'razer-blackwidow-ultimate-macro-scripts')
options=('!strip')
install="razer-blackwidow-ultimate.install"
source=('https://github.com/juankfree/razer-blackwidow-ultimate/raw/e77a2003b68050b83ea7babcf01c5580e048dc76/razer-blackwidow-ultimate.py' 'https://github.com/juankfree/razer-blackwidow-ultimate/raw/f48dab7b00c54e588793d9a6f222f788ac17dc92/99-razer-blackwidow-ultimate.rules')
md5sums=('SKIP' 'SKIP')
package() {
	install -Dm755 "${srcdir}/razer-blackwidow-ultimate.py" "${pkgdir}/usr/bin/razer-blackwidow-ultimate"
	install -Dm755 "${srcdir}/99-razer-blackwidow-ultimate.rules" "${pkgdir}/usr/lib/udev/rules.d/99-razer-blackwidow-ultimate.rules"
}
